<mvc:View
    controllerName="sls.validation.emptyfieldcheck.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
>
    <l:VerticalLayout
        class="sapUiContentPadding"
        width="100%"
    >
        <Label
            text="Age"
            labelFor="ageInput"
            required="true"
        />
        <Input
            id="ageInput"
            class="sapUiSmallMarginBottom"
            placeholder="Enter age"
            value="{
				path: '/age',
				type: 'sap.ui.model.type.Integer',
				constraints: {
					minimum: 18
				}
			}"
            change="onAgeChange"
        />
        <Label
            text="Name"
            labelFor="nameInput"
            required="true"
        />
        <Input
            id="nameInput"
            class="sapUiSmallMarginBottom"
            placeholder="Enter name"
            value="{
				path: '/name',
				type: 'sap.ui.model.type.String',
				constraints: {
					minLength: 2,
					maxLength: 10
				}
			}"
            change="onNameChange"
            liveChange="onNameLiveChange"
        />
        <Label
            text="E-mail"
            labelFor="emailInput"
            required="true"
        />
        <Input
            id="emailInput"
            class="sapUiSmallMarginBottom"
            type="Email"
            placeholder="Enter email"
            value="{
				path: '/email',
				type: '.customEmailType'
			}"
        />
        <Label
            text="Password"
            labelFor="passwordInput"
            required="true"
        />
        <Input
            id="passwordInput"
            class="sapUiSmallMarginBottom"
            placeholder="Enter password"
            value="{
							path: '/pwd',
							type: '.types.password'
						}"
        />

        <Label
            text="Date and Time"
            labelFor="dateTimeInput"
            required="true"
        />
        <DateTimePicker
            id="dateTimeInput"
            value="{
					path: '/date',
					type: 'customDateTimeType'
				}"
        />
        <Button
            text="Submit"
            press="onSubmit"
            type="Emphasized"
        />
    </l:VerticalLayout>
</mvc:View>
