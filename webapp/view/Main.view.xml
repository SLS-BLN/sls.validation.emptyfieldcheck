<mvc:View
	controllerName="sls.validation.emptyfieldcheck.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%"
	>
		<Label
			text="Age"
			labelFor="ageInput"
			required="true"
		/>
		<Input
			id="ageInput"
			class="sapUiSmallMarginBottom"
			placeholder="Enter age"
			value="{
				path: '/age',
				type: 'sap.ui.model.type.Integer',
				constraints: {
					minimum: 18
				}
			}"
			change="onAgeChange"
		/>
		<Label
			text="Name"
			labelFor="nameInput"
			required="true"
		/>
		<Input
			id="nameInput"
			class="sapUiSmallMarginBottom"
			placeholder="Enter name"
			value="{
				path: '/name',
				type: 'sap.ui.model.type.String',
				constraints: {
					minLength: 2,
					maxLength: 10
				}
			}"
			change="onNameChange"
			liveChange="onNameLiveChange"
		/>
		<Label
			text="E-mail"
			labelFor="emailInput"
			required="true"
		/>
		<Input
			id="emailInput"
			class="sapUiSmallMarginBottom"
			type="Email"
			placeholder="Enter email"
			value="{
				path: '/email',
				type: '.customEMailType'
			}"
		/>
		<Button
			text="Submit"
			press="onSubmit"
		/>
	</l:VerticalLayout>
</mvc:View>