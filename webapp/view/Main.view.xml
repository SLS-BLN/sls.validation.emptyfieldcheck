<mvc:View
    controllerName="sls.validation.emptyfieldcheck.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page>
        <l:VerticalLayout
            class="sapUiContentPadding"
            width="100%"
        >
            <Label
                text="Age"
                labelFor="ageInput"
                required="true"
            />
            <Input
                id="ageInput"
                class="sapUiSmallMarginBottom"
                fieldGroupIds="personalInfo"
                placeholder="Enter age"
                showClearIcon="true"
                value="{
				path: '/age',
				type: 'sap.ui.model.type.Integer',
				constraints: {
					minimum: 18
                    }
                }"
                valueStateText="Age must REALLY be greater than 18"
            />
            <Label
                text="Name"
                labelFor="nameInput"
                required="true"
            />
            <Input
                id="nameInput"
                class="sapUiSmallMarginBottom"
                fieldGroupIds="personalInfo"
                placeholder="Enter name"
                value="{
					path: '/name',
					type: 'sap.ui.model.type.String',
					constraints: {
						minLength: 2,
						maxLength: 10
					}
				}"
                valueStateText="Name must be between 2 and 10 characters - YOUR NAME IS TOO LONG"
            />
            <Label
                text="E-mail"
                labelFor="emailInput"
                required="true"
            />
            <Input
                id="emailInput"
                class="sapUiSmallMarginBottom"
                type="Email"
                fieldGroupIds="personalInfo"
                autocomplete="true"
                placeholder="Enter email"
                value="{
				    path: '/email',
				    type: '.types.email'
		        }"
                valueStateText="Please enter a VALID email address"
            />
            <Label
                text="Password"
                labelFor="passwordInput"
                required="true"
            />
            <Input
                id="passwordInput"
                class="sapUiSmallMarginBottom"
                placeholder="Enter password"
                showClearIcon="true"
                value="{
				    path: '/pwd',
					type: '.types.password'
				}"
            />

            <Label
                text="Date and Time"
                labelFor="dateTimeInput"
                required="true"
            />
            <DateTimePicker
                id="dateTimeInput"
                value="{
					path: '/date',
					type: '.types.dateTime'
				}"
            />
        </l:VerticalLayout>
        <footer>
            <Toolbar>
                <Button
                    text="Submit"
                    press="onSubmit"
                    type="Emphasized"
                />
                <Button
                    text="Submit Field Group"
                    press="onSubmitFieldGroup"
                    type="Neutral"
                />
                <Button
                    text="Reset"
                    press="onReset"
                    type="Reject"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
